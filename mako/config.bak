# Configuración global
font=monospace 12
background-color=#1e1e2e
text-color=#ffffff
border-size=2
border-radius=5
padding=10
margin=10
anchor=top-right
layer=overlay
max-history=100
default-timeout=5000  # 5 segundos para notificaciones normales
sort=-time  # Mostrar notificaciones más recientes primero

# Notificaciones de baja prioridad (éxito, verde)
[urgency=low]
background-color=#166534  # Verde oscuro
text-color=#ffffff
border-color=#22c55e  # Verde claro
default-timeout=3000  # 3 segundos para notificaciones de éxito

# Notificaciones de prioridad normal (advertencias, amarillo)
[urgency=normal]
background-color=#854d0e  # Amarillo oscuro
text-color=#ffffff
border-color=#facc15  # Amarillo claro
default-timeout=5000  # 5 segundos

# Notificaciones de alta prioridad (errores, rojo)
[urgency=critical]
background-color=#7f1d1d  # Rojo oscuro
text-color=#ffffff
border-color=#ef4444  # Rojo claro
default-timeout=0     # Persistir hasta que se descarten manualmente
